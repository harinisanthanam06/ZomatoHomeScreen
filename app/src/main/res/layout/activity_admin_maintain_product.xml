<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"
    tools:context=".AdminMaintainProduct">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/maintain_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/product_name"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            />
        <EditText
            android:id="@+id/maintain_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_image"
            android:background="@drawable/input_design"
            android:gravity="center_horizontal"
            android:hint="Art Name"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:layout_margin="5dp"
            android:padding="12dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/maintain_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_name"
            android:background="@drawable/input_design"
            android:gravity="center_horizontal"
            android:hint="Art Price"
            android:textAlignment="center"
            android:textColor="@color/purple_500"
            android:layout_margin="5dp"
            android:padding="12dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/maintain_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_price"
            android:hint="Art Description"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/purple_500"
            android:background="@drawable/input_design"
            android:layout_margin="5dp"
            android:padding="12dp"
            android:gravity="center_horizontal" />
        <Button
            android:id="@+id/art_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintain_description"
            android:text="APPLY CHANGES"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/buttons"
            android:layout_margin="5dp"
            android:padding="12dp"
            android:gravity="center_horizontal" />
        <Button
            android:id="@+id/delete_art"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/art_button"
            android:text="DELETE THIS ART"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@drawable/buttons"
            android:layout_margin="5dp"
            android:padding="12dp"
            android:gravity="center_horizontal" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>