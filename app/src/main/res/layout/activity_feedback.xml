<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feedback">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/address_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="668dp"
        android:background="@color/purple_500"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.424"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Feedback"
        app:titleTextColor="#FFFFFF">

    </androidx.appcompat.widget.Toolbar>


    <EditText
        android:id="@+id/msg_EmailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/msg_Phone"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="53dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/input_design"
        android:ems="10"
        android:hint=" Enter your Email"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/black"
        android:textSize="19sp"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="306dp" />

    <EditText
        android:id="@+id/msg_Phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="376dp"
        android:background="@drawable/input_design"
        android:ems="10"
        android:hint=" Enter your  number"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/black"
        android:textSize="19sp"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="373dp" />

    <EditText
        android:id="@+id/msg_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/msg_EmailAddress"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="52dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/input_design"
        android:ems="10"
        android:hint=" Enter your Name"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/black"
        android:textSize="19sp" />


    <Button
        android:id="@+id/msgbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="119dp"
        android:layout_marginBottom="158dp"
        android:text="SUBMIT FEEDBACK" />

    <EditText
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="49dp"
        android:layout_marginBottom="281dp"
        android:background="@drawable/input_design"
        android:ems="10"
        android:hint=" Type your feedback"
        android:inputType="text"
        android:padding="20dp"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/black"
        android:textSize="19sp" />
</RelativeLayout>